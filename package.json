{
	"name": "qsx",
	"version": "3.2.0",
	"main": "build/qsx.umd.js",
	"module": "build/qsx.es.js",
	"source": "src/index.js",
	"repository": "git@github.com:danburzo/qsx.git",
	"author": "Dan Burzo <dan@danburzo.ro>",
	"license": "MIT",
	"devDependencies": {
		"@rollup/plugin-buble": "^0.21.3",
		"eslint": "^7.5.0",
		"esm": "^3.2.25",
		"husky": "^4.2.5",
		"jsdom": "^16.3.0",
		"prettier": "2.0.5",
		"pretty-quick": "^2.0.1",
		"rollup": "^2.22.2",
		"rollup-plugin-terser": "^6.1.0",
		"tap-spec": "^5.0.0",
		"tape": "^5.0.1"
	},
	"scripts": {
		"test": "tape -r esm test/*.test.js",
		"build": "rollup -c",
		"lint": "yarn eslint {src,test}/**/*.js",
		"prepublishOnly": "yarn lint && yarn build && yarn test"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged",
			"post-commit": "yarn lint"
		}
	},
	"dependencies": {
		"symbol-tree": "^3.2.4"
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 80
	}
}
